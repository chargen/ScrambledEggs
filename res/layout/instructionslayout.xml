        android:id="@+id/instructionsText"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/instructions"
        android:textSize="17sp"
        android:gravity="center_horizontal"
        />

</RelativeLayout>
</ScrollView>